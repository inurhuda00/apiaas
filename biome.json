{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [".next", "node_modules", ".wrangler"]
	},
	"formatter": { "enabled": true, "indentStyle": "tab", "lineWidth": 120, "bracketSpacing": true },
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noImplicitAnyLet": "off"
			}
		}
	},
	"javascript": { "formatter": { "quoteStyle": "double" } }
}
